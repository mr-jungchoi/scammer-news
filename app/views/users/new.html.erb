
<div class="container">
<h1>New User Registration</h1>

<%= render 'shared/errors' %>

<%= form_for @user, url: users_path, html: {class: 'user-registration'} do |f| %>
  <%= f.label :username %><br>
  <%= f.text_field :username %><br>
  <%= f.label :email %><br>
  <%= f.email_field :email %><br>
  <%= f.label :password %><br>
  <%= f.password_field :password %><br>
  <%= f.submit "Register" %>
<% end %>
</div>
