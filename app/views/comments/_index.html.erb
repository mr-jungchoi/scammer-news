<div class="container">
 <% if comments %>
    <% comments.each do |comment| %>
      <ul>
        <li><%= comment.text %></li>
        <li>- <%= comment.commenter.username %></li>
        <% if logged_in? && authorized?(comment.commenter) %>
        <%= link_to "Edit", edit_article_comment_path(comment) %>
        <%= link_to "Delete", article_comment_path(comment), method: :delete %>
        <% end %>
      </ul>
    <% end %>
  <% end %>
</div>
