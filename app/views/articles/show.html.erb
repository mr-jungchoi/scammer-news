<div class="container">
  <h1>
    <%= @article.title %>
  </h1>
  <p>
    <%= @article.text %>
  </p>

  <% if logged_in? && authorized?(@article.author) %>
  <%= link_to "Edit", edit_user_article_path(:user_id => current_user.id, :id => @article.id) %>
  <%= link_to "Delete", user_article_path(:user_id => current_user.id, :id => @article.id), method: :delete %>
  <% end %>
</div>
